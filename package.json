{
  "name": "gatsby-starter-carbon-theme",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "build": "gatsby build",
    "build:prod": "gatsby build --prefix-paths",
    "clean": "gatsby clean",
    "dev": "gatsby develop",
    "dev:clean": "gatsby clean && gatsby develop",
    "serve": "gatsby serve",
    "start": "yarn dev",
    "test": "yarn format:diff",
    "format": "prettier --write \"src/**/*.{sccs,css,js,md,mdx}\"",
    "format:diff": "prettier --check \"src/**/*.{sccs,css,js,md,mdx}\""
  },
  "dependencies": {
    "gatsby": "^2.18.22",
    "gatsby-theme-carbon": "^1.19.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "husky": "^4.0.10",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format:diff && pretty-quick --staged"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  }
}
